{
  "name": "@chanzuckerberg/axe-storybook-testing",
  "version": "6.2.0",
  "license": "MIT",
  "homepage": "https://github.com/chanzuckerberg/axe-storybook-testing",
  "engines": {
    "node": ">=12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chanzuckerberg/axe-storybook-testing.git"
  },
  "bin": {
    "axe-storybook": "./bin/axe-storybook.js"
  },
  "main": "build/index.js",
  "files": [
    "bin",
    "build",
    "index.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "all": "yarn lint && yarn types && yarn test",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf ./build",
    "demo": "yarn build && yarn --cwd demo storybook:axe",
    "demo:axeOnly": "yarn build && yarn --cwd demo storybook:axeOnly",
    "demo:build": "yarn --cwd demo build-storybook",
    "demo:install": "yarn --cwd demo install",
    "demo:link": "yarn link && yarn --cwd demo link @chanzuckerberg/axe-storybook-testing",
    "demo:setup": "yarn demo:install && yarn demo:link && yarn demo:build",
    "demo:storybook": "yarn --cwd demo storybook",
    "demo:unlink": "yarn --cwd demo unlink @chanzuckerberg/axe-storybook-testing && yarn unlink",
    "lint": "eslint --ext=js,jsx,ts,tsx .",
    "prebuild": "yarn clean",
    "prepublishOnly": "yarn build",
    "pretest:integration": "yarn build",
    "test": "yarn test:unit && yarn test:integration",
    "test:integration": "yarn test:integrationOnly",
    "test:integrationOnly": "jest tests/integration",
    "test:unit": "jest tests/unit",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "http-server": "^14.1.1",
    "indent-string": "^4.0.0",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "p-timeout": "^4.1.0",
    "playwright": "^1.29.2",
    "portfinder": "^1.0.32",
    "ts-dedent": "^2.2.0",
    "yargs": "^17.6.2",
    "zod": "^3.20.2"
  },
  "peerDependencies": {
    "@storybook/preview-web": "^6.4.0",
    "axe-core": "^4.0.0"
  },
  "devDependencies": {
    "@chanzuckerberg/eslint-config-edu-js": "^1.0.2",
    "@chanzuckerberg/eslint-config-edu-ts": "^1.0.5",
    "@chanzuckerberg/prettier-config-edu": "^1.0.2",
    "@storybook/csf": "0.0.2-next.8",
    "@storybook/preview-web": "^6.5.15",
    "@storybook/store": "^6.5.15",
    "@types/http-server": "^0.12.1",
    "@types/jest": "^29.2.5",
    "@types/lodash": "^4.14.191",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/yargs": "^17.0.19",
    "axe-core": "^4.6.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.1",
    "jest": "^29.3.1",
    "prettier": "2.8.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^4.1.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  }
}
